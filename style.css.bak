.caption{
	font-size: 9pt;
	text-align: center;
}

.bolded{
	font-weight: bold;
}


footer{
	font-family: Montserrat, serif;
	font-size: 10pt;
	color: white;
	margin-left: 5%;
	margin-right: 5%;
	padding-left: 2%;
	background-color: #414a4c;
	margin-top: auto; /* for the purpose of sticky footer, places footer at the bottom of page */
